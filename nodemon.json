{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules",
    "package.json",
    "node_modules/",
    "node_modules"
  ],
  "verbose": false,
  "events": {
    "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'",
    "crash" : "npm run dev-local"
  },
  "watch": [
    "index.js"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js json"
}